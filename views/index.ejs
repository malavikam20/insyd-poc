<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Insyd Notifications</title>
  <link rel="stylesheet" href="styles.css" />
</head>
<body>
  <h1>Insyd Notification System</h1>

  <section class="form-section">
    <h2>Create a Post</h2>
    <input type="text" id="postUserId" placeholder="Enter User ID (poster)" />
    <textarea id="postContent" placeholder="Enter post content"></textarea>
    <button onclick="createPost()">Submit Post</button>
  </section>

  <section class="form-section">
    <h2>View Notifications</h2>
    <input type="text" id="notifUserId" placeholder="Enter User ID (receiver)" />
    <button onclick="getNotifications()">Fetch Notifications</button>
    <ul id="notifList"></ul>
  </section>

  <script src="app.js"></script>
</body>
</html>
